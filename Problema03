#include <stdio.h>

int main() {
    short idade;
    int deposito;
    long numeroConta;

    printf("Digite sua idade: ");
    scanf("%hd", &idade);

    printf("Digite o valor a depositar: ");
    scanf("%d", &deposito);

    printf("Digite o n√∫mero da conta: ");
    scanf("%ld", &numeroConta);

    printf("Idade: %hd\nValor: R$%d\nConta: %ld\n", idade, deposito, numeroConta);
    return 0;
}
